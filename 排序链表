#归并
class Solution {
    public ListNode sortList(ListNode head) {
        if(head == null || head.next == null) return head;
        ListNode tail = head;
        int num = 1;
        while(tail.next != null){
            tail = tail.next;
            num++;
        }   
        return myfunc(head,num);

    }
    private ListNode myfunc(ListNode head,int num){
        if(num == 1){
            head.next = null;
            return head;
        } 
        int leftnum = num/2;
        int rightnum = num-num/2;
        ListNode mid = head;
        for(int i = 0;i<leftnum;i++){
            mid = mid.next;
        }
        ListNode lefthead = myfunc(head,leftnum);
        ListNode righthead = myfunc(mid,rightnum);
        ListNode pHead = new ListNode(0);
        ListNode cur = pHead;
        while(lefthead != null && righthead != null){
            if(lefthead.val<righthead.val){
                cur.next = lefthead;
                lefthead = lefthead.next;
            }else{
                cur.next = righthead;
                righthead = righthead.next;
            }
            cur = cur.next;
        }
        if(lefthead!=null)
            cur.next = lefthead;
        if(righthead!=null)
            cur.next = righthead;
        return pHead.next;
    }
}

#链表快排，交换值不交换节点
class Solution {
    public ListNode sortList(ListNode head) {
        quicksort(head,null);
        return head;
    }
    private void quicksort(ListNode head,ListNode tail){
        //if(head == null || head.next == tail) return;
        //二分类的不是每次移动一个单位
        if(head == tail || head.next == tail) return;
        ListNode small = head;
        ListNode p = head.next;
        int t;
        while(p != tail){
            if(p.val<head.val && p!=small){
                small = small.next;
                t = small.val;
                small.val = p.val;
                p.val = t;
            }
            p = p.next;
        }
        t = small.val;
        small.val = head.val;
        head.val = t;
        quicksort(head,small);
        quicksort(small.next,tail);
    }
}
